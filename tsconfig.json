{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "./",
    "paths": {
      "@homework-task/*": ["./src/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
